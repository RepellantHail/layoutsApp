<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppLayouts"
        tools:targetApi="31">
        <activity
            android:name=".ActivityCalculadora"
            android:exported="false" />
        <activity
            android:name=".ActivityFrame"
            android:exported="false"
            android:label="Frame Layout" />
        <activity
            android:name=".ActivityGrid"
            android:exported="false"
            android:label="Grid Layout" />
        <activity
            android:name=".ActivityConstraint"
            android:exported="false"
            android:label="Constraint Layout" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Linear Layout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>